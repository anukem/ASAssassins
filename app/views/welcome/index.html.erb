<!-- Countdown plugin -->
        

        <script>
    $("#getting-started") 
            // Year/Month/Day Hour:Minute:Second
            .countdown("2018/02/11 23:00:00", function (event) {

            	if(event.type != "stoped" && event.type != "finish") {
            		$(this).css('display', 'block').html(
                        event.strftime('%D Days %Hh %Mm <span class="second-timer" >%Ss</span>')
                        );
            	}
            	else {
            		$("#getting-started").fadeOut();
            	}
                
                

            });
        </script>
