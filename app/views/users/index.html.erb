<h1 style="color: black;">CURRENT STANDINGS</h1>
 
<table class="table", style="border: none;">
  <tr style="border: dotted;">
    <th style="border: dotted;">Player Name </th>
    <th style="border: dotted;">Number of Kills</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr style="border: dotted;">
      <td style="border: dotted;"><%= user.name %></td>
      <td style="border: dotted;">
      <%= if user.num_of_kills == nil
      		user.num_of_kills = 0
      	else
      		user.num_of_kills
      	end  %>

      </td>
    </tr>
  <% end %>
</table>

