<!DOCTYPE html>
<html>
<head>
  <title>ASAssassins</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<style type="text/css">
  a {
    color: red;
  }

  a.hover {
    color: black;
  }
</style>
	<% if logged_in? %>
		<%= link_to "Profile", current_user %>
		<%= link_to "Log out", logout_path, method: "delete" %>	
		<% else %>
          
          <div style="font-size: 20px; border-style: solid; width: 3.6em;
                      border-radius: 25px; text-align: 
                      center; background-color:#2D2D2D;
                      ">
            <%= link_to "Login", login_path %>  
          </div>
        <% end %>
      <%= yield %>
</body>
</html>
